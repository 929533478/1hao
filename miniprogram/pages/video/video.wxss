/* miniprogram/pages/video/video.wxss */

.avatar{
  position: relative;
  background-color:#fff;
  height: 420rpx;
  display: flex;
  justify-content: eneter;
  align-items: center; 

}
.avatar .cover{
  position: absolute;
  top:50%;
  left:50%;
  margin-top: -103px;
  margin-left: -188px;
  
}
.cover .bofang{
  position: absolute;
  top:50%;
  left:50%;
  margin-top: -31px;
  margin-left: -31px;
  width: 60px !important;
  height:60px !important;
}
.cover image{
  width:370px;
  height: 420rpx;
  border-radius:5px;
  margin:2px;
}
.avatar video{
  width:100%;
  height: 420rpx;
  border-radius:5px;
  
}
/*视频的外框*/
.videos{
  border-top: 1px solid #D3D3D3;
  margin:0px 0 8px 0;
  z-index:-30; 
 
  /*border-radius: 5px;*/
 /*box-shadow: 2px 4px 6px #000; */
}
/*分享*/
.videotitle{
  position: relative;
  top: 3px;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
}

.videotitle .fenxiang{
  font-size: 14px;
  display: inline-block;
  position: absolute;
  left: 10px;
}

.videos .titlename{
  font-size: 16px;
  padding:22px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

.videotitle::after{
  content:".";
  padding-bottom: 5px;
  color:rgba(0,0,0,0.1);
}
.videotitle .title image{
  width:25px;
  height:25px;
  padding-left:10px; 
}
.videotitle .title{
  width:40%;
  padding:5px;
  
}
.videotitle .title .tleft{
  position:absolute;
  left:8px;
  top:0px;

}
.videotitle .title .tleft button{
  background: rgba(0,0,0,0.0);
  height: 35px;
  border: 0px solid rgba(248,248,255,0.0);
  width: 130px;
  }
.videotitle .title .tright{
  position:absolute;
  right:35px;
  top:5px;
 
}
.videotitle .title .tright .zanshu{
  padding-left:15px;
  font-size:12px;
}
